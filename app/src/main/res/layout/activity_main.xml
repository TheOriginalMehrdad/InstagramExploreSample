<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        tools:context=".MainActivity">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="9dp"
                android:backgroundTint="?attr/colorOnPrimaryContainer"
                app:cardCornerRadius="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="9dp"
                    android:src="@drawable/ic_explore"
                    app:tint="?attr/colorOnPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="44dp"
                    android:text="Search"
                    android:textColor="@color/medium_gray" />

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <ImageView
            android:id="@+id/img1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/img4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/img5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img1"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/img3"
            app:layout_constraintStart_toEndOf="@+id/img1"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/img3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/img4"
            app:layout_constraintTop_toBottomOf="@+id/img2"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="2dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/img5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/img5"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/img7"
            app:layout_constraintTop_toBottomOf="@+id/img3"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/img8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/img6"
            app:layout_constraintTop_toBottomOf="@+id/img5"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.105"
            app:layout_constraintStart_toStartOf="@+id/img8"
            app:layout_constraintTop_toBottomOf="@+id/img8"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/img8"
            app:layout_constraintStart_toStartOf="@+id/img7"
            app:layout_constraintTop_toBottomOf="@+id/img7"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/img9"
            app:layout_constraintEnd_toStartOf="@+id/img7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img4"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/img9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img6"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/img10"
            app:layout_constraintStart_toStartOf="@+id/img9"
            app:layout_constraintTop_toBottomOf="@+id/img9"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/img11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img11"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/img12"
            app:layout_constraintStart_toEndOf="@+id/img14"
            app:layout_constraintTop_toBottomOf="@+id/img12"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img13"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/img15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img12"
            app:layout_constraintTop_toBottomOf="@+id/img10"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/img14"
            app:layout_constraintEnd_toStartOf="@+id/img17"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img14"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img17"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/img15"
            app:layout_constraintEnd_toStartOf="@+id/img18"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/img16"
            app:layout_constraintTop_toBottomOf="@+id/img15"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/img18"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/img17"
            app:layout_constraintTop_toBottomOf="@+id/img13"
            tools:srcCompat="@tools:sample/avatars" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_home"
                    app:tint="?attr/colorOnPrimary" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_explore"
                    app:tint="?attr/colorOnPrimary" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_post"
                    app:tint="?attr/colorOnPrimary" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_reels"
                    app:tint="?attr/colorOnPrimary" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_profile"
                    app:tint="?attr/colorOnPrimary" />

            </LinearLayout>

        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
